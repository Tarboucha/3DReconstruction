# .env file for Docker Compose
# Copy this to .env and modify the paths for your system

# =============================================================================
# IMAGE AND RESULTS PATHS
# =============================================================================

# Input images directory (read-only)
IMAGES_PATH=E:/project/3Dreconstruction/images/statue_of_liberty_images

# Results output directory (read-write)
RESULTS_PATH=E:/project/3Dreconstruction/results

# Optional: Source code directory for development
SOURCE_PATH=.

# =============================================================================
# BENCHMARK CONFIGURATION
# =============================================================================

# Maximum number of images to process
MAX_IMAGES=10

# Number of benchmark runs for statistical analysis
NUM_RUNS=3

# Image resize dimensions (width,height) - leave empty for original size
RESIZE_WIDTH=640
RESIZE_HEIGHT=480

# Methods to benchmark (comma-separated)
METHODS=SIFT,ORB,AKAZE

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Memory limit for containers (in GB)
MEMORY_LIMIT=4G

# CPU limit for containers
CPU_LIMIT=2.0

# GPU support (set to 1 to enable, 0 to disable)
USE_GPU=0

# OpenCV log level (ERROR, WARNING, INFO, DEBUG)
OPENCV_LOG_LEVEL=ERROR

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode (1 for true, 0 for false)
DEBUG=0

# Python optimization level
PYTHONOPTIMIZE=0

# Container name prefix
CONTAINER_PREFIX=feature-detection